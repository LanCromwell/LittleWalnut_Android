<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:singleLine="true"
        android:text="我是title"
        android:textColor="@color/like_list_item_name_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/audioTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="10分03秒"
            android:textColor="@color/gray_666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:textColor="#FF973E"
            android:textSize="8sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:visibility="gone"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toRightOf="@+id/audioTimeTv"
            android:background="@drawable/shape_tag"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:textColor="#FF973E"
            android:textSize="8sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:visibility="gone"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toRightOf="@+id/tag1"
            android:background="@drawable/shape_tag"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iconPlayCb"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/selector_like" />

        <ImageView
            android:id="@+id/iconShareImg"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/iconPlayCb"
            android:background="@drawable/icon_share_black"
            android:button="@null" />

        <ImageView
            android:id="@+id/iconLikeCb"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iconShareImg"
            android:background="@drawable/selector_play" />
    </RelativeLayout>

    <include layout="@layout/hor_line"/>

</LinearLayout>