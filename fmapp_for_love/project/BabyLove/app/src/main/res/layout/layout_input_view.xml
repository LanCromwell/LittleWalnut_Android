<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/login_input_text_size"
            android:textColorHint="@color/part_line_color"
            android:background="@color/transparent"
            android:inputType="number"
            android:hint="@string/input_phone_number"/>

        <ImageView
            android:id="@+id/clearBtn"
            android:layout_width="@dimen/input_edittext_clear_icon_size"
            android:layout_height="@dimen/input_edittext_clear_icon_size"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_qingchu"/>

        <TextView
            android:id="@+id/getCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#666666"
            android:text="获取验证码"
            android:layout_gravity="right|center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/clearBtn"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/part_line_color"/>


</LinearLayout>