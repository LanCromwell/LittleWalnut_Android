<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <include layout="@layout/layout_header_black_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="修改密码"
                android:textColor="#313131"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneNumTv"
                style="@style/input_style"
                android:layout_marginTop="40dp"
                android:hint="请输入手机号注册"
                android:inputType="number" />

            <include layout="@layout/hor_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/verfyCodeEt"
                    style="@style/input_style"
                    android:hint="请输入验证码"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@id/verfyCodeEt"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_send_btn"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include layout="@layout/hor_line" />

            <EditText
                android:id="@+id/passwordEdit"
                style="@style/input_style"
                android:layout_marginTop="30dp"
                android:hint="请输入新密码"/>

            <include layout="@layout/hor_line" />

            <Button
                android:id="@+id/loginBtn"
                style="@style/ButtonSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="37dp"
                android:text="@string/commit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>