<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/leftIconLy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/icon_white_back" />
    </RelativeLayout>
    <TextView
        android:id="@+id/centerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/centerTv"
        android:layout_alignParentRight="true"
        android:padding="5dp">
        <TextView
            android:id="@+id/rightTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="右1"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_666"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rightTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@id/rightTv1"
            android:text="右2"
            android:textColor="@color/gray_666"
            android:textSize="11sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/rightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_toLeftOf="@id/rightTv2"
            android:background="@color/transparent"
            android:src="@drawable/icon_sort"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>