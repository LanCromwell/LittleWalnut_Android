<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/splashLayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <cn.baby.love.common.view.ResizeImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_welcome" />

            <ImageView
                android:id="@+id/jumpBtn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_jump"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright © 2018 生命河. "
                android:gravity="center_vertical"
                android:textSize="8sp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:textColor="@color/gray_999"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/global_goals"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/guideLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--不再显示-->
            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/dot_selector"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/dot_selector"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/dot_selector"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tiyanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="200dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
